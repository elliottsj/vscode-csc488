{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CSC488 Source Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.csc488",
				"match": "\\b(if|then|else|while|do|repeat|until|exit|when|return|with|write|read)\\b"
			}, {
				"name": "keyword.declaration.csc488",
				"match": "\\b(var|function|procedure)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.csc488",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.csc488",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.csc488"
}